# Database
DATABASE_URL=postgresql://stryktips:stryktips@localhost:5432/stryktips
# For mocked/local development, you can use SQLite:
# DATABASE_URL=sqlite:///./stryktips.db

# Application
APP_NAME=Stryktips Bot
LOG_LEVEL=INFO
DEBUG=false

# Scrapers
SVENSKA_SPEL_BASE_URL=https://www.svenskaspel.se
SCRAPE_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36

# Odds providers (add API keys if available)
BET365_API_KEY=
UNIBET_API_KEY=
BETSSON_API_KEY=

# Cron schedule (K8s CronJob uses this for reference)
# 0 7 * * 5 = Every Friday at 07:00 UTC (08:00 Stockholm winter time)
CRON_SCHEDULE=0 7 * * 5

# Analysis settings
MAX_HALF_COVERS=2
MIN_VALUE_THRESHOLD=1.05
